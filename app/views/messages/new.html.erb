<div class="msgbox">
  <h1><%=@user.username%></h1>
  <hr>
  <div class="me">
    <p>My message</p>
  </div>
  <div class="others">
    <p>others' message</p>

  </div>
  <footer>
    <form class="" action="/messages" method="post">
       <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
       <textarea class='msg' name="comment" rows="8" cols="80"></textarea>
       <button >SUBMIT</button>
    </form>
  </footer>

</div>
